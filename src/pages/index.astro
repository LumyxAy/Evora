---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
---

<MainLayout>
  <Navbar />

  <main>
    <canvas id="myChart"> </canvas>
  </main>


</MainLayout>


<style>
  main{
    #myChart {
      max-width: 40vw;
      max-height: 40vh;
      min-width: 40vw;
      min-height: 40vh;

      
    }
  }
  
</style>

<script>
  import Chart from "chart.js/auto";

  const ctx = document.getElementById(`myChart`) as HTMLCanvasElement;

  new Chart(ctx, {
    type: "doughnut",
    data: {
      labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
      datasets: [
        {
          label: "# of Votes",
          data: [12, 19, 3, 5, 2, 3],
          borderWidth: 1,
        },
      ],
    },
    options: {
      plugins: {
        tooltip: {
          enabled: false,
        },
      },
      scales: {
        x: {
          display: false,
        },
        
        y: {
          display: false,
          beginAtZero: true,
        },
      },
    },
  });
</script>


